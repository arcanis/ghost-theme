{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{#post}}
    <main class="post post--default post--{{#if tags}}{{ tags.0.name }}{{/if}}">
        <header class="post-header">
            <a class="link" href="{{ url }}">
                <h3 class="title">{{ title }}</h3>
                <time class="date datefuzz" datetime="{{ date format="YYYY-MM-DDTHH:mm:ss" }}Z">
                    {{ date format="DD/MM/YYYY" }}
                </time>
            </a>
        </header>
        <section class="post-content">
            <div class="post-container">
                <article class="post-article">
                    {{{ content }}}
                </article>
                <div class="post-tools">
                    <a class="tool twitter" href="http://twitter.com/share?url={{ url absolute="true" }}&text=Blog+post+-+{{ title }}&via=arcanis" target="_blank">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a class="tool comment" href="#comments">
                        <i class="fa fa-comment"></i>
                    </a>
                </div>
            </div>
        </section>
    </main>
{{/post}}
